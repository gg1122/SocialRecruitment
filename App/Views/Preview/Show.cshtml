@model Langben.DAL.PreviewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Resumes.cshtml";
}
@using Common
@using Models
@section SubMenu{}

<div class="col-md-12 column">

   
    

    <!--表单开始 -->
    <div class="page-header">
        <h3>
            秀才学堂           
        </h3>
    </div>
    <!--表单开始 -->
    <div id="collapseEducation">
        @if (Model != null && Model.resume != null && Model.resume.DegreeSchool != null)
        {
            foreach (var item in Model.resume.DegreeSchool)
            {
                <div class="mr_jobe_list row clearfix">
                    <div class="col-xs-8 col-md-8">
                        <div class="l2">
                            <h4>@item.SchoolName</h4>
                            <span>@item.ProfessionalType2</span>
                        </div>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        @if (item.IsNow != "Y")
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                        else
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — 至今</span>
                        }
                    </div>

                </div>
                <br />
            }
        }

    </div>
    <!--表单结束 -->
    <!--表单开始 -->
    <div class="page-header">
        <h3>
            语言能力
        </h3>
    </div>
    <!--表单开始 -->
    <div id="degreeSchool">
        @if (Model != null && Model.resume != null && Model.resume.LanguageCompetence != null)
        {
            foreach (var item in Model.resume.LanguageCompetence)
            {
                <div class="mr_jobe_list row clearfix">
                    <div class="col-xs-8 col-md-8">
                        <span>@item.Language</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <span>@item.Level</span>
                    </div>

                </div>
                <br />
            }
        }

    </div>
    <!--表单结束 -->
    <!--表单开始 -->
    <div class="page-header">
        <h3>
            技能爱好 
        </h3>
    </div>
    <!--表单开始 -->
    <div id="iTAbility">
        @if (Model != null && Model.resume != null && Model.resume.ITAbility != null)
        {
            foreach (var item in Model.resume.ITAbility)
            {
                <div class="mr_jobe_list row clearfix">
                    <div class="col-xs-4 col-md-4">
                        <span>@item.Ability</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <span>@item.UseTime</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <span>@item.Proficiency</span>
                    </div>
                </div>
                <br />
            }
        }
    </div>
    <!--表单结束 -->
    <!--表单开始 -->
    <div class="page-header">
        <h3>
            项目经验　
        </h3>
    </div>
    <!--表单开始 -->
    <div id="projectExperience">
        @if (Model != null && Model.resume != null && Model.resume.ProjectExperience != null)
        {
            foreach (var item in Model.resume.ProjectExperience)
            {
                <div class="mr_jobe_list row clearfix" style="background-color:gainsboro">
                    <div class="col-xs-8 col-md-8">
                        <span>@item.ProjectName</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        @if (item.IsNow != "Y")
                    {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                        else
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — 至今</span>
                        }
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>项目职务:</span>
                    </div>
                    <div class="col-xs-8 col-md-8">
                        <span>@item.Job</span>
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>项目描述:</span>
                    </div>

                    <div class="col-xs-11 col-md-11" style="word-wrap:break-word;">
                        <span>@item.ProjectDescription</span>
                    </div>

                </div>
                <br />
            }
        }
    </div>
    <!--表单结束 -->
    <!--表单开始 -->
    <div class="page-header">
        <h3>
            工作经验 
        </h3>
    </div>
    <!--表单开始 -->
    <div id="internshipExperience">
        @if (Model != null && Model.resume!=null && Model.resume.InternshipExperience != null)
        {
            foreach (var item in Model.resume.InternshipExperience)
            {
                <div class="mr_jobe_list row clearfix" style="background-color:gainsboro">
                    <div class="col-xs-8 col-md-8">
                        <span>@item.CompanyName</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        @if (item.IsNow != "Y")
                    {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                        else
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — 至今</span>
                        }
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>公司职务:</span>
                    </div>
                    <div class="col-xs-8 col-md-8">
                        <span>@item.Job</span>
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>公司性质:</span>
                    </div>

                    <div class="col-xs-8 col-md-8" style="word-wrap:break-word;">
                        <span>@item.CompanyNature</span>
                    </div>

                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>公司规模:</span>
                    </div>

                    <div class="col-xs-8 col-md-8" style="word-wrap:break-word;">
                        <span>@item.CompanyScale</span>
                    </div>

                </div>
                <br />
            }
        }
    </div>
    <!--表单结束 -->


</div>
