@model Langben.DAL.PreviewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Resumes.cshtml";
}
@using Common
@using Models
@section SubMenu{}

<div class="col-md-12 column">
    @if (Model != null && Model.resume != null)
    {
        <h4 class="breadcrumb">
            完整度：@Model.resume.CompletionPercentage %
        </h4>
    }
    <div class="page-header">
        <h4>个人信息 <small><a href="~/Person"><i class="fa fa-edit" aria-hidden="true"></i> 编辑</a></small></h4>
    </div>
    <!--表单开始 -->
    @if (Model != null && Model.account != null)
    {
        <div class="form-horizontal clearfix" style="position: relative;" id="divPersonal">

            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-xs-3 control-label">姓名</label>
                    <div class="col-xs-9 col-md-9">
                        <p class="form-control-static">@Model.account.MyName</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-xs-3 control-label">性别</label>
                    <div class="col-xs-9 col-md-9">
                        <p class="form-control-static">@Model.account.Sex</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-xs-3 control-label">户口所在地</label>
                    <div class="col-xs-9 col-md-9">
                        <p class="form-control-static">@Model.account.AnmeldenCity</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-xs-3 control-label">现在所在地</label>
                    <div class="col-xs-9 col-md-9">
                        <p class="form-control-static">@Model.account.LiveCity</p>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-xs-3 control-label">电子邮件</label>
                    <div class="col-xs-9 col-md-9">
                        <p class="form-control-static">@Model.account.Email</p>
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-xs-3 control-label">个人评价</label>
                    <div class="col-xs-9 col-md-9">
                        <p class="form-control-static">@Model.account.PersonalAssessment</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <hr />
    <!--表单开始 -->
    <div class="page-header">
        <h4>
            秀才学堂
            <small><a href="~/DegreeSchool"><i class="fa fa-edit" aria-hidden="true"></i> 编辑</a></small>
        </h4>
    </div>
    <!--表单开始 -->
    <div id="collapseEducation">
@if (Model != null && Model.resume != null && Model.resume.DegreeSchool != null)
{
    foreach (var item in Model.resume.DegreeSchool)
    {
                <div class="mr_jobe_list row clearfix">
                    <div class=" col-md-8">
                        <div class="l2">
                            <h4>@item.SchoolName</h4>
                            <span>@item.ProfessionalType2</span>
                        </div>
                    </div>
                    <div class="col-md-4 color9">
                        @if (item.IsNow != "Y")
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                        else
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — 至今</span>
                        }
                    </div>

                </div>
                <br />
            }
        }

    </div>
    <!--表单结束 -->
    <hr />
    <!--表单开始 -->
    <div class="page-header">
        <h4>
            语言能力
            <small><a href="~/LanguageCompetence"><i class="fa fa-edit" aria-hidden="true"></i> 编辑</a></small>
        </h4>
    </div>
    <!--表单开始 -->
    <div id="degreeSchool">
@if (Model != null && Model.resume != null && Model.resume.LanguageCompetence != null)
{
    foreach (var item in Model.resume.LanguageCompetence)
    {
                <div class="mr_jobe_list row clearfix">
                    <div class="col-xs-8 col-md-8">
                        <span>@item.Language</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <span>@item.Level</span>
                    </div>

                </div>
                
            }
        }

    </div>
    <!--表单结束 -->
    <hr />
    <!--表单开始 -->
    <div class="page-header">
        <h4>
            技能爱好
            <small><a href="~/ITAbility"><i class="fa fa-edit" aria-hidden="true"></i> 编辑</a></small>
        </h4>
    </div>
    <!--表单开始 -->
    <div id="iTAbility">
@if (Model != null && Model.resume != null && Model.resume.ITAbility != null)
{
    foreach (var item in Model.resume.ITAbility)
    {
                <div class="mr_jobe_list row clearfix">
                    <div class="col-xs-4 col-md-4">
                        <span>@item.Ability</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <span>@item.UseTime</span>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <span>@item.Proficiency</span>
                    </div>
                </div>
               
            }
        }
    </div>
    <!--表单结束 -->
    <hr />
    <!--表单开始 -->
    <div class="page-header">
        <h4>
            项目经验
            <small><a href="~/ProjectExperience"><i class="fa fa-edit" aria-hidden="true"></i> 编辑</a></small>
        </h4>
    </div>
    <!--表单开始 -->
    <div id="projectExperience">
@if (Model != null && Model.resume != null && Model.resume.ProjectExperience != null)
{
    foreach (var item in Model.resume.ProjectExperience)
    {
                <div class="mr_jobe_list row clearfix" >
                    <div class=" col-md-8">
                        <b>@item.ProjectName</b>
                    </div>
                    <div class=" col-md-4 color9">
                        @if (item.IsNow != "Y")
                    {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                        else
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — 至今</span>
                        }
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>项目职务:</span>
                    </div>
                    <div class="col-xs-8 col-md-8">
                        <span>@item.Job</span>
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>项目描述:</span>
                    </div>

                    <div class="col-xs-11 col-md-11" style="word-wrap:break-word;">
                        <span>@item.ProjectDescription</span>
                    </div>

                </div>
                <br />
            }
        }
    </div>
    <!--表单结束 -->
    <hr />
    <!--表单开始 -->
    <div class="page-header">
        <h4>
            实习经验
            <small><a href="~/InternshipExperience"><i class="fa fa-edit" aria-hidden="true"></i> 编辑</a></small>
        </h4>
    </div>
    <!--表单开始 -->
    <div id="internshipExperience">
@if (Model != null && Model.resume != null && Model.resume.InternshipExperience != null)
{
    foreach (var item in Model.resume.InternshipExperience)
    {
                <div class="mr_jobe_list row clearfix" >
                    <div class=" col-md-8">
                        <b>@item.CompanyName</b>
                    </div>
                    <div class=" col-md-4 color9">
                        @if (item.IsNow != "Y")
                    {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                        else
                        {
                            <span>@item.BeginDate.ToString("yyyy-MM-dd") — 至今</span>
                        }
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>公司职务:</span>
                    </div>
                    <div class="col-xs-8 col-md-8">
                        <span>@item.Job</span>
                    </div>
                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>公司性质:</span>
                    </div>

                    <div class="col-xs-8 col-md-8" style="word-wrap:break-word;">
                        <span>@item.CompanyNature</span>
                    </div>

                </div>
                <div class="mr_jobe_list row clearfix">
                    <div style="float:left;margin-left:15px">
                        <span>公司规模:</span>
                    </div>

                    <div class="col-xs-8 col-md-8" style="word-wrap:break-word;">
                        <span>@item.CompanyScale</span>
                    </div>

                </div>
                <br />
            }
        }
    </div>
    <!--表单结束 -->


</div>
