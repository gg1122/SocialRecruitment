@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->

    <title>@ViewBag.Title</title>

    <!-- 新 Bootstrap 核心 CSS 文件 -->
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">

    
 
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/JScriptCommon.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <!-- logo -->
                <a href="~/">
                    <img class="logo" src="~/images/logo.png" alt="" style="width: 207px;" />
                </a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right">
                    @if (HttpContext.Current.Request.Cookies != null && HttpContext.Current.Request.Cookies["account"] != null)
                    {
                        <li><a href="~/SysNotice" style="margin-right:20px;">我的消息</a></li>
                        <li><a href="~/Preview">个人资料</a></li>
                        <li><a href="~/Publish">炫技</a></li>

                    }
                    else
                    {
                        <li><a href="~/Logon" style="margin-right:20px;" id="aTopLogin">登录</a></li>
                        <li><a href="~/Register" id="aTopRegister">注册</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="footer-company"> <a target="_blank" title="北京狼奔科技有限公司" href="http://www.langben.com/">北京狼奔科技有限公司</a></span>
                </div>
                <div class="col-md-6">
                    <div class="footer-right">
                        <span class="footer-company">邮箱</span> ben@langben.com
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>